<!DOCTYPE html>
<html>

<head>
    <title>Profile Page</title>
    <% include ../partials/head%>
    <link rel="stylesheet" href="/css/profile.css">
</head>

<body>
    <% include ../partials/navbar%>
   
    <h4 class="center-align">
        <a href="/socket/home"><button> Chat </button></a>
    </h4>
    <br><br>

    <form action="/profile/index" method="POST" enctype="multipart/form-data">
        <div class="row">
            <div class="col s12"></div>
        </div>
        <div class="row">
            <div class="col s12">
                <div class="file-field input-field">
                    <div class="btn grey">
                        <span>File</span>
                        <input type="file" name="image" required="required" />
                    </div>
                    <div class="file-path-wrapper">
                        
                    </div>
                </div>
            </div>
        </div>

        <br><br>
        <div class="row">
            <div class="input-field col s12">
                <input class="validate" id="caption" type="text" name="content" />
                <label for="caption">Caption </label>
            </div>
        </div>
        <div class="row">
            <div class="col s10"> 
                <button class="btn waves-effect waves-light" type="submit" name="action">
                     Upload
                    <i class="material-icons right">send</i>
                </button>
            </div>
        </div>
    </form>

    <br><br>
    <% data.forEach(function(user){%>
    <div class="mitgliederliste">
    <figure class="einzel"><img class = "img-responsive" alt="Mitglieder" src='/<%= user.image %>' style="max-width: 500px; max-height: 425px;">
        <figcaption><%= user.content %><br></figcaption>
      </figure>
    </div>
    <%})%>
    
    
    

</body>
</html>