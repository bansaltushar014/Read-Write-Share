<!DOCTYPE html>
<html>

<head>
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/materialize/0.100.2/css/materialize.min.css">
    <link rel="stylesheet" href="/stylesheets/style.css">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Profile Page</title>
</head>

<body>
    <script src="https://code.jquery.com/jquery-3.3.1.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/0.100.2/js/materialize.min.js"></script>
    

    <a href="/" class="brand-logo left">Read Write Share</a>
    <a class="right" href="/user/logout">Logout</a>

    <h4 class="center-align"><%= name.email %> <%= name.google.emailid %>
        <%= name.facebook.name %> <a href="/socket/home"><button>   Chat</button></a></h4>
    <form action="/profile/index" method="POST" enctype="multipart/form-data">
        <div class="row">
            <div class="col s12"></div>
        </div>
        <div class="row">
            <div class="col s12">
                <div class="file-field input-field">
                    <div class="btn grey"><span>File</span><input type="file" name="image" required="required" /></div>
                    <div class="file-path-wrapper"><input class="file-path validate" type="text" /></div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="input-field col s12"><input class="validate" id="caption" type="text" name="content" /><label for="caption">Caption </label></div>
        </div>
        <div class="row">
            <div class="col s10"> <button class="btn waves-effect waves-light" type="submit" name="action">Upload<i class="material-icons right">send</i></button></div>
           
        </div>
    </form>
    

    <% data.forEach(function(user){%>
        <!-- <li><%= user.id %></li> -->
        <div class="row card-panel hoverable">
            <div class="col s6 center-align responsive-img"><img width="200" src='/<%= user.image %>' alt="image"> </div>
            <div class="col s6 center-align"><%= user.content %></div>
        </div>
        <%})%>
</body>

</html>